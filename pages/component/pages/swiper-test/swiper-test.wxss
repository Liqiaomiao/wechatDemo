.swiper_container {
  height:100rpx;
  width: 80vw;
}
.swiper_item_container{
  padding: 10rpx;
}
.swiper-item {
  font-size: 25rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  letter-spacing: 2px;
  border-radius: 5px;
  box-shadow: 2px 2px 5px rgba(0, 0, 0, .2);
  border:1px solid #555;
  width: 90%;
  position: absolute;
  background: #fff;
  transform:translate(20px,20px);
  z-index: 1;
  transition:all .5s ease-in-out;
  height: 100rpx;
}
.swiper-item:first-child{
   transform:translate(10px,30px);
   z-index: 2;
}
