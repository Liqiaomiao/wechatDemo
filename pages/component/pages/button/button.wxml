<import src="../../../common/head.wxml"/>
<import src="../../../common/foot.wxml"/>
<view class='container'>
  <template is="head" data="{{title:'button'}}"/>
  <view class='page-body'>
    <view class='btn-area' id='buttonContainer'>
      <button type='primary'>页面主操作 Normal</button>
      <button type='primary' loading='true'>页面主操作 loading</button>
      <button type='primary' disabled='true'>页面主操作 disabled</button>

      <button type='default'>页面次要操作 Normal</button>
      <button type='default' disabled='true' >页面次要操作 disabled</button>

      <button type='warn'>警告类操作 Normal</button>
      <button type='warn' disabled='true'>警告类操作 disabled</button>

      <view class='button-sp-area'>
        <button type='primary' plain='true'>按钮</button>
        <button type='primary' plain='true' disabled='true'>不可点击的按钮</button>
        <button type='default' plain='true'>按钮</button>
        <button type='default' plain='true' disabled='true'>按钮</button>
        <button size='mini' class='mini-btn' type='primary'>按钮</button>
        <button size='mini' class='mini-btn' type='default'>按钮</button>
        <button size='mini' class='mini-btn' type='warn'>按钮</button>
      </view> 


    </view>
  </view>

  <template is="foot"/>
</view>