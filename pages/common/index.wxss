.index-hd{
  padding: 80rpx;
  text-align: center;
}
.index-log{
  width: 86rpx;
  height:86rpx;
}
.index-desc{
  margin-top:20rpx;
  color:#888;
  font-size:28rpx; 
}
.kind-list-item-hd{
  display: flex;
  align-items: center;
  padding: 30rpx;
  transition: opacity .3s;
}
.kind-list-text{
  flex:1;
}
.kind-list-img{
  width: 60rpx;
  height: 60rpx;
}
.navigator{
  padding:20rpx 30rpx;
  position:relative;
  display: flex;
  align-items: center;
}
.navigator-text{
  flex:1;
}
.navigator-arrow{
  padding-right: 26rpx;
  position: relative;
}
.kind-list-item-bd{
  height: 0;
  overflow: hidden
}
.kind-list-item-bd-show{
  height:auto;
}
.kind-list-item-hd-show{
  opacity:.2;
}
.navigator::before{
  content:'';
  position:absolute;
  left:30rpx;
  top:0;
  right:30rpx;
  height: 1px;
  border-top:1rpx solid #d8d8d8;
  color:#d8d8d8;
}
.navigator:first-child::before{
  display: none;
}
.navigator-arrow::after{
  content:'';
  display:inline-block;
  height: 18rpx;
  width: 18rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #888;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
 position: absolute;
  right: 28rpx;
  top:50%;
  margin-top:-8rpx;
}
